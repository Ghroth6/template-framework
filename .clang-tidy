---
# TFW project code quality check configuration
# Based on the requirements of the coding standard
# Enable all checks, exclude unrelated checks

Checks: >
  *,
  -fuchsia-*,
  -google-*,
  -zircon-*,
  -abseil-*,
  -llvm-*,
  -llvmlibc-*,
  -modernize-use-trailing-return-type

# Check options configuration
CheckOptions:
  # Naming convention check (coding standard 2.1-2.5 section)
  - key: readability-identifier-naming.ClassCase
    value: CamelCase                      # Class name uses PascalCase
  - key: readability-identifier-naming.FunctionCase
    value: CamelCase                      # Function name uses PascalCase (internal function) or TFW_ prefix (C interface)
  - key: readability-identifier-naming.VariableCase
    value: camelCase                      # Variable name uses camelCase
  - key: readability-identifier-naming.ParameterCase
    value: camelCase                      # Parameter name uses camelCase
  - key: readability-identifier-naming.ConstantCase
    value: UPPER_CASE                     # Constant name uses UPPER_CASE
  - key: readability-identifier-naming.MacroDefinitionCase
    value: UPPER_CASE                     # Macro definition uses UPPER_CASE

  # Other check options
  - key: readability-braces-around-statements.ShortStatementLines
    value: 1                              # Short statement line threshold
  - key: performance-unnecessary-value-param.AllowedTypes
    value: ""                             # Allowed value parameter types
